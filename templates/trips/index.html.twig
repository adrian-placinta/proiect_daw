{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block content %}
    <header class="bg-primary text-white text-center d-flex align-items-center h-100 w-100" style="min-height: 100vh;">
        <div class="container">
            <!-- Question Section -->
            <h1 class="display-4 mb-5">{{ question }}</h1>

            <!-- Feature Cards Grid -->
            <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
                {% for feature in features %}
                    <div class="col">
                        <div class="card h-100 bg-transparent text-white border-light shadow-lg">
                            <div class="card-body text-center p-4">
                                <!-- Title -->
                                <h3 class="card-title mb-3">{{ feature.title }}</h3>
                                <!-- Description -->
                                <p class="card-text">{{ feature.description }}</p>
                                <!-- Additional Icon (Optional) -->
                                <div class="mt-4">
                                    <i class="fas fa-arrow-right fa-2x"></i> <!-- Example: Additional icon -->
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Trip Table Section -->
            <div class="trip-table bg-white rounded shadow-lg p-4">
                <h2 class="text-dark mb-4">Rute Disponibile</h2>
                <div class="table-responsive"> <!-- Make table scrollable on mobile -->
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Plecare</th>
                                <th scope="col">Sosire</th>
                                <th scope="col">Durată</th>
                                <th scope="col">Preț</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for trip in trips %}
                                <tr>
                                    <th scope="row">{{ loop.index }}</th>
                                    <td>{{ trip.departure }}</td>
                                    <td>{{ trip.arrival }}</td>
                                    <td>{{ trip.duration }}</td>
                                    <td>{{ trip.price }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </header>
{% endblock %}