{% extends 'base.html.twig' %}

{% block title %}Curse Disponibile{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">
            <i class="fas fa-ticket-alt me-2 text-primary"></i> Biletele Mele
            <br>
            <small class="text-muted fs-6 d-block">Gestionați-vă toate rezervările de bilete</small>
        </h1>

        {% if trips is empty %}
            <div class="alert alert-info text-center py-4 rounded-3 shadow-sm">
                <i class="fas fa-info-circle me-2"></i> Nu aveți bilete rezervate în acest moment.
            </div>
        {% else %}
            <div class="table-responsive shadow-sm rounded-3">
                <table class="table table-striped table-hover align-middle text-center">
                    <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-start">Destinație</th>
                        <th scope="col">Data Plecării</th>
                        <th scope="col">Status</th>
                        <th scope="col">Cod QR</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for userTrip in trips %}
                        <tr>
                            <td class="fw-semibold text-start">{{ userTrip.trip.destination }}</td>
                            <td>{{ userTrip.trip.departureDate|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if userTrip.trip.departureDate|date('U') > "now"|date('U') %}
                                    <span class="badge bg-success text-uppercase p-2">
                                    <i class="far fa-check-circle me-1"></i> Activă
                                </span>
                                {% else %}
                                    <span class="badge bg-secondary text-uppercase p-2">
                                    <i class="far fa-calendar-alt me-1"></i> Finalizată
                                </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data={{ userTrip.qrCode }}"
                                         alt="QR Code"
                                         class="img-fluid rounded border shadow-sm"
                                         style="max-height: 100px;"
                                         data-bs-toggle="tooltip"
                                         title="Cod bilet: {{ userTrip.qrCode }}"/>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
