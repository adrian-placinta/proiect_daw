{% extends 'base.html.twig' %}

{% block title %}Curse Disponibile{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Curse Disponibile</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% if trips is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Nu există curse disponibile în acest moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Destinație</th>
                        <th>Data Plecării</th>
                        <th>Preț (RON)</th>
                        <th>Locuri Disponibile</th>
                        <th class="text-center">Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    {% for trip in trips %}
                        <tr>
                            <td>{{ trip.id }}</td>
                            <td>{{ trip.destination }}</td>
                            <td>{{ trip.departureDate|date('d/m/Y H:i') }}</td>
                            <td>{{ trip.price|number_format(2, ',', '.') }}</td>
                            <td>{{ trip.availableSeats }}</td>
                            <td class="text-center">
                                {% if app.user %}
                                    <form action="{{ path('book_trip', {'id': trip.id}) }}" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-sm" 
                                                {% if trip.availableSeats < 1 %}disabled{% endif %}>
                                            <i class="fas fa-ticket-alt"></i> 
                                            Rezervă
                                        </button>
                                    </form>
                                {% else %}
                                    <a href="{{ path('login') }}" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-sign-in-alt"></i> Login pentru rezervare
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}